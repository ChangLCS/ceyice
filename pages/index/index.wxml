<!--index.wxml-->
<view class="main-container">

  <message id="message"></message>
  <view wx:key="item.id" wx:for="{{dataList}}">
    <image style="width: 60px; height: 60px;" mode="aspectFill" src="{{item.imgUrl}}"></image>
    <text> {{item.time}} </text>
    <text> {{item.type}} </text>
    <text> {{item.text}} </text>
  </view>
</view>

<view class="main-edit">
  <form class="main-edit-form" bindsubmit="sendMessage">
    <textarea class="main-edit-textarea" name="text" auto-height :fixed="true" />

    <button class="main-edit-btn" type="primary" form-type="submit">发送</button>
  </form>
</view>

