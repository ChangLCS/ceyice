/**index.wxss**/
.main-container {
  background-color: #ebebeb;
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.main-edit {
  position: fixed;
  width: 100%;
  z-index: 2;
  bottom: 0;
  left: 0;
  display: inline-flex;
  max-height: 300rpx;
}
.main-edit-textarea {
  flex: 10;
  width: 100%;
  height: 100%;
  max-height: 300rpx;
  min-height: 70rpx;
  background-color: #fff;
  padding: 10rpx 20rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.main-edit-btn {
  flex: 2;
  font-size: 30rpx;
  height: 100%;
}
